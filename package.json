{
  "name": "glasschat-app",
  "version": "1.0.0",
  "description": "Production-ready real-time chat application with glassmorphism design",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-deps": "npm install && cd server && npm install && cd ../client && npm install"
  },
  "keywords": [
    "chat",
    "real-time",
    "glassmorphism",
    "react",
    "nodejs"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "socket.io": "^4.8.3",
    "tailwind": "^4.0.0"
  }
}
